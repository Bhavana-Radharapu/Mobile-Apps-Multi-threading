<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="361dp"
    android:layout_height="353dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".player2"
    android:orientation="horizontal"
    android:layout_marginTop="60dp">


    <EditText
        android:id="@+id/player_2_input"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_above="@+id/p2_list"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="149dp"
        android:hint="Input"
        android:maxLength="4"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/Opponent_code_p1"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_above="@+id/p1_guesslist"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="149dp"
        android:layout_toEndOf="@+id/player_2_input"
        android:editable="false"
        android:focusable="false"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="72dp"
        android:layout_height="22dp"
        android:layout_above="@+id/player_2_input"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/textView6"
        android:text="PLAYER 2"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Opponent_code_p1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="0dp"
        android:text="OPPONENT"
        android:textAlignment="center" />

    <Button
        android:id="@+id/send_guess_p2"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="110dp"
        android:text="SEND GUESS" />

    <ListView
        android:id="@+id/p2_list"
        android:layout_width="137dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="24dp"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/p1_guesslist"
        android:layout_width="134dp"
        android:layout_height="86dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/msg_p2"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="160dp"
        android:ems="10"
        android:hint="Enter comment for player 1"
        android:inputType="textPersonName"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/p1_comment"
        android:layout_width="297dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="214dp"
        android:text="Opponents Comments"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>